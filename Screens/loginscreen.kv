<Login_Screen@Screen>:
    id: login_screen
    name: 'login_screen'

    BoxLayout:
        orientation: "vertical"

        canvas.before:
            Color:
                rgba: 236/255,252/255,240/255,1
            Rectangle:
                size: self.size
                pos: self.pos

        MDTopAppBar:
            anchor_title: "left"
            title: "YUGO HOUSE"
            md_bg_color:"#1a434e"
            font_style_title : "Fonts/Md_Gothic11.ttf"
            specific_text_color: "#ecfcf0"
            right_action_items: [["information-outline", lambda x: x]]
            elevation: 0

        FloatLayout:
            Image:
                source: "Vectors/YugoHouseLogo.png"
                size_hint: 0.8,0.8
                opacity: .1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDBoxLayout:
                orientation: "vertical"
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                size_hint: 0.8, 0.8

                MDTextField:
                    id: username
                    hint_text: "Username"
                    helper_text: "enter username"
                    icon_right: "account"
                    multiline: False
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    color_mode: 'custom'
                    line_color_focus: "#0C3B2E"
                    hint_text_color_focus: "#0C3B2E"
                    icon_right_color_focus: "#0C3B2E"

                MDTextField:
                    id: password
                    hint_text: "Password"
                    icon_right: "key"
                    multiline: False
                    pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                    color_mode: 'custom'
                    line_color_focus: "#0C3B2E"
                    hint_text_color_focus: "#0C3B2E"
                    icon_right_color_focus: "#0C3B2E"


                MDFillRoundFlatButton:
                    pos_hint: {"center_x": 0.5, "center_y": 0.4}
                    font_size: "16dp"
                    text: "Login"
                    md_bg_color: "#1a434e"
                    on_release: app.change_screen()
                    elevation: 0

    MDLabel:
        text: "Powered by Dirheny"
        font_name : "Fonts/Md_Gothic11.ttf"
        halign: "center"
        font_size: sp(10)
        size_hint_y: None
        height: self.texture_size[1] + dp(20)
        padding_y: dp(10)

<ErrorPopup>:
    size_hint: None, None
    size: 300, 150
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: error_message
            text: ''
        Button:
            text: 'Close'
            size_hint_y: None
            height: '30dp'
            on_release: root.dismiss()