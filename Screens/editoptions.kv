<EditOptions@Screen>:
    id: edit_options
    name: 'edit_options'
    MDBoxLayout:
        orientation:"vertical"
        canvas.before:
            Color:
                rgba: 236/255,252/255,240/255,1
            Rectangle:
                size: self.size
                pos: self.pos

        MDTopAppBar:
            anchor_title:"left"
            title:"Edit"
            left_action_items:[["arrow-left", lambda x: app.main_menu()]]
            right_action_items:[["information-outline", lambda x: x ]]
            md_bg_color:"#ecfcf0"
            specific_text_color:"#757575"
            elevation:0

        MDSeparator:
        MDBoxLayout:
            MDScrollView:
                MDList:
                    OneLineAvatarIconListItem:
                        text:"Add New Member"
                        on_release: app.add_new_student()
                        IconLeftWidget:
                            icon:"plus-circle-outline"
                    OneLineAvatarIconListItem:
                        text:"Edit Fees"
                        on_release: app.feeandfine()
                        IconLeftWidget:
                            icon:"hand-coin-outline"
                    OneLineAvatarIconListItem:
                        text:"Delete Members"
                        on_release: app.delete_the_member()
                        IconLeftWidget:
                            icon:"delete"

